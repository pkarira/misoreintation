<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back4"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingLeft="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Enter Euler angles(In Deg)"
            android:id="@+id/textView"
            android:textStyle="bold"

            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
       android:paddingTop="20dp"





            
        >

            <EditText
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:background="#ffffff"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="5dp"
    android:id="@+id/et1"
                android:hint="Enter A1"
    android:inputType="numberDecimal" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:hint="Enter B1"
                android:id="@+id/et2"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:hint="Enter C1"
                android:id="@+id/et3"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:hint="Enter A2"
                android:id="@+id/et4"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"

            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:hint="Enter B2"
                android:id="@+id/et5"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="50dp"
            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:hint="Enter C2"
                android:id="@+id/et6"
                android:inputType="numberDecimal" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
      android:paddingLeft="120dp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cal"
            android:background="#da0907"
            android:text="Calculate"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Misorientation "
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15dp"
           />
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:id="@+id/t1"
            android:textColor="#ffffff"
            android:maxLines="1" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:id="@+id/t2"
            android:textColor="#ffffff"
            android:maxLines="1" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:id="@+id/t3"
            android:textColor="#ffffff"
            android:maxLines="1" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Matrix                "
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
android:textStyle="bold"
                android:textSize="15dp"

               />
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:id="@+id/t4"
                android:textColor="#ffffff"
                android:maxLines="1" />
            />

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:id="@+id/t5"
                android:textColor="#ffffff"
                android:maxLines="1" />
            />
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:id="@+id/t6"
                android:textColor="#ffffff"
                android:maxLines="1" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="                           "
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:id="@+id/t7"
                android:textColor="#ffffff"
                android:maxLines="1" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:id="@+id/t8"
                android:textColor="#ffffff"
                android:maxLines="1" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:id="@+id/t9"
                android:textColor="#ffffff"
                android:maxLines="1" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
           android:textSize="20dp"
            android:text="cosA"
            android:textColor="#ffffff"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/t10"
            android:maxLength="5"
            android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="r1"
                android:textColor="#ffffff"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/t11"
                android:maxLength="5"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="r2"
                android:textColor="#ffffff"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/t12"
                android:maxLength="5"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="r3"
                android:textColor="#ffffff"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/t13"
                android:maxLength="5"
                android:textColor="#ffffff"/>
        </LinearLayout>
</LinearLayout>
</ScrollView>